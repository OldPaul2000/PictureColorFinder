<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ScrollPane?>
<AnchorPane fx:id="mainContainer" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.picturecolorfinder.MainController" layoutX="0" layoutY="0" stylesheets="@styling.css">

    <AnchorPane fx:id="pictureContainer" layoutX="30" layoutY="70" viewOrder="2" prefWidth="300" prefHeight="200">
        <ImageView fx:id="pictureView" />
    </AnchorPane>
    <AnchorPane fx:id="projectContainer">
        <AnchorPane fx:id="picturePickerContainer">
            <TextField fx:id="picturesFolderSource" viewOrder="1" layoutX="30" layoutY="20" prefWidth="200"/>
            <ChoiceBox fx:id="picturesList" layoutX="30" layoutY="60" prefWidth="200" prefHeight="20" viewOrder="1"/>
        </AnchorPane>
        <ScrollPane fx:id="pickedColors" pannable="true"/>
    </AnchorPane>

</AnchorPane>
